---
import "../styles/fonts.css";
import 'aos/dist/aos.css';

export interface Props {
  title: string;
  description?: string;
}
const { title, description = "Driven to grow, together" } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
    <!-- GSAP Script -->
    <script is:inline client:load>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      // Register ScrollTrigger with GSAP
      gsap.registerPlugin(ScrollTrigger);

      // Make GSAP and ScrollTrigger globally available
      window.gsap = gsap;
      window.ScrollTrigger = ScrollTrigger;

      // Set a flag to indicate GSAP is ready
      window.gsapReady = true;
      console.log("âœ… GSAP y ScrollTrigger registrados correctamente");

      // Dispatch a custom event to notify GSAP is ready
      window.dispatchEvent(new CustomEvent("gsapReady"));
    </script>
  </head>
  <body class="font-avant bg-white text-dark">
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }
  html {
    scroll-behavior: smooth;
  }

  /* Scrollbar personalizada */
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  ::-webkit-scrollbar-thumb {
    background: #062bed;
    border-radius: 4px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #050835;
  }
</style>

<script>
	import AOS from 'aos';
	AOS.init({
	  duration: 900,
	  once: true // Anima solo una vez
	});
</script>