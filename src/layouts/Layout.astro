---
import "../styles/fonts.css";
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Driven to grow, together" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

  
    <script>

      // GSAP USADO DE MANERA GLOBAL
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";
      // Función global para verificar GSAP
      window.gsapReady = false;

      function checkGSAP() {
        if (typeof gsap !== "undefined") {
          gsap.registerPlugin(ScrollTrigger);
          window.gsapReady = true;
          console.log("✅ GSAP y ScrollTrigger registrados correctamente");

          // Disparar evento personalizado
          window.dispatchEvent(new CustomEvent("gsapReady"));
        } else {
          console.error("❌ GSAP no está disponible");
        }
      }

      // Verificar GSAP cuando se carga la página
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", checkGSAP);
      } else {
        checkGSAP();
      }

      // Verificar también en load
      window.addEventListener("load", checkGSAP);
    </script>
  </head>
  <body class="font-avant bg-white text-dark">
    <slot />
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap");

  * {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    padding: 0;
    font-family: "Inter", sans-serif;
  }

  /* Scrollbar personalizada */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  ::-webkit-scrollbar-thumb {
    background: #062bed;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #050835;
  }
</style>
