</div>

<script>
  // Funci√≥n para animar el c√≠rculo de carga con CSS puro (fallback)
  function animateLoadingCircle() {
    const loadingCircle = document.querySelector(".loading-circle");
    const menuCircle = document.querySelector(".menu-circle");
    if (!loadingCircle) return;

    // Paso 0: Entrada elegante del c√≠rculo
    loadingCircle.style.transition =
      "all 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55)";
    loadingCircle.style.transform = "translate(-50%, -50%) scale(1)";
    loadingCircle.style.opacity = "1";

    // Paso 1: Pausa breve y luego hacer el c√≠rculo m√°s peque√±o
    setTimeout(() => {
      loadingCircle.style.transition =
        "transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)";
      loadingCircle.style.transform = "translate(-50%, -50%) scale(0.1)";
    }, 900);

    // Paso 2: Mover hacia el men√∫ sin pausa
    setTimeout(() => {
      loadingCircle.style.transition =
        "all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94)";
      loadingCircle.style.left = "auto";
      loadingCircle.style.top = "24px";
      loadingCircle.style.right = "120px";
      loadingCircle.style.transform = "translate(0, 0) scale(0.04)";

      // Paso 3: Mostrar el men√∫ y ocultar el c√≠rculo de carga
      setTimeout(() => {
        if (menuCircle) {
          menuCircle.style.opacity = "1";
        }
        loadingCircle.style.opacity = "0";
        setTimeout(() => {
          loadingCircle.style.display = "none";
        }, 100);
      }, 200);
    }, 1200);
  }

  // Funci√≥n para animar el header
  function animateHeader() {
    const header = document.querySelector("header");
    const logo = document.querySelector(".logo-container");
    const navLinks = document.querySelectorAll("nav a");

    if (header) {
      header.style.transition = "all 0.8s ease-out";
      header.style.transform = "translateY(0)";
      header.style.opacity = "1";
    }

    if (logo) {
      setTimeout(() => {
        logo.style.transition = "all 0.6s ease-out";
        logo.style.transform = "translateX(0)";
        logo.style.opacity = "1";
      }, 500);
    }

    navLinks.forEach((link, index) => {
      setTimeout(
        () => {
          link.style.transition = "all 0.4s ease-out";
          link.style.transform = "translateY(0)";
          link.style.opacity = "1";
        },
        800 + index * 100
      );
    });
  }

  // Funci√≥n principal de inicializaci√≥n (solo para header y elementos despu√©s del loading)
  function initAnimations() {
    // Intentar usar GSAP si est√° disponible
