// Servicios component
---

<section id="servicios" class="py-20 bg-primary/20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-dark text-center mb-16">Nuestros Servicios</h2>
    
    <!-- Contenedor de scroll horizontal -->
    <div class="servicios-container relative">
      <div class="servicios-wrapper flex gap-8 pb-8">
        
        <!-- Estrategia y Consultoría -->
        <div class="servicio-card min-w-[400px] bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="icon-wrapper mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-secondary to-dark rounded-2xl flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-dark mb-4">Estrategia y Consultoría</h3>
          <p class="text-dark/80 leading-relaxed mb-6">
            Dirección estratégica para la operación segura y eficiente de tu infraestructura tecnológica.
          </p>
          <ul class="space-y-2 text-dark/70">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Análisis de riesgos
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Planificación estratégica
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Optimización de procesos
            </li>
          </ul>
        </div>
        
        <!-- Arquitectura e Integración -->
        <div class="servicio-card min-w-[400px] bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="icon-wrapper mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-dark to-secondary rounded-2xl flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-dark mb-4">Arquitectura e Integración</h3>
          <p class="text-dark/80 leading-relaxed mb-6">
            Ingeniería aplicada en tecnología que evoluciona constantemente para adaptarse a tus necesidades.
          </p>
          <ul class="space-y-2 text-dark/70">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Diseño de sistemas
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Integración de plataformas
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Migración de datos
            </li>
          </ul>
        </div>
        
        <!-- Servicios Gestionados -->
        <div class="servicio-card min-w-[400px] bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="icon-wrapper mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-secondary to-dark rounded-2xl flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-dark mb-4">Servicios Gestionados</h3>
          <p class="text-dark/80 leading-relaxed mb-6">
            Protección activa y soporte continuo para mantener tu infraestructura funcionando sin interrupciones.
          </p>
          <ul class="space-y-2 text-dark/70">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Monitoreo 24/7
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Respuesta a incidentes
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Mantenimiento preventivo
            </li>
          </ul>
        </div>
        
        <!-- Formación -->
        <div class="servicio-card min-w-[400px] bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="icon-wrapper mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-dark to-secondary rounded-2xl flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-dark mb-4">Formación</h3>
          <p class="text-dark/80 leading-relaxed mb-6">
            Competencias y conocimientos para la evolución continua de tu equipo y organización.
          </p>
          <ul class="space-y-2 text-dark/70">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Capacitación técnica
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Certificaciones
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
              Workshops especializados
            </li>
          </ul>
        </div>
        
      </div>
    </div>
    
    <!-- Indicadores de navegación -->
    <div class="flex justify-center mt-8 space-x-2">
      <button class="nav-dot w-3 h-3 bg-secondary rounded-full opacity-50 hover:opacity-100 transition-opacity" data-index="0"></button>
      <button class="nav-dot w-3 h-3 bg-secondary rounded-full opacity-50 hover:opacity-100 transition-opacity" data-index="1"></button>
      <button class="nav-dot w-3 h-3 bg-secondary rounded-full opacity-50 hover:opacity-100 transition-opacity" data-index="2"></button>
      <button class="nav-dot w-3 h-3 bg-secondary rounded-full opacity-50 hover:opacity-100 transition-opacity" data-index="3"></button>
    </div>
  </div>
</section>

<script>
  // Animación de servicios con scroll horizontal
  gsap.registerPlugin(ScrollTrigger);
  
  // Pin de la sección
  ScrollTrigger.create({
    trigger: '#servicios',
    start: 'top top',
    end: 'bottom bottom',
    pin: true,
    pinSpacing: false
  });
  
  // Animación horizontal de las cards
  gsap.to('.servicios-wrapper', {
    x: () => -(document.querySelector('.servicios-wrapper').scrollWidth - window.innerWidth + 32),
    ease: 'none',
    scrollTrigger: {
      trigger: '#servicios',
      start: 'top top',
      end: 'bottom bottom',
      scrub: 1
    }
  });
  
  // Animación de entrada de las cards
  gsap.from('.servicio-card', {
    y: 100,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#servicios',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación de los iconos
  gsap.from('.icon-wrapper', {
    scale: 0,
    rotation: 180,
    duration: 0.6,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#servicios',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Navegación por dots
  const dots = document.querySelectorAll('.nav-dot');
  const cards = document.querySelectorAll('.servicio-card');
  
  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      const card = cards[index];
      const container = document.querySelector('.servicios-container');
      const cardLeft = card.offsetLeft;
      const containerWidth = container.offsetWidth;
      
      gsap.to('.servicios-wrapper', {
        x: -cardLeft + (containerWidth - card.offsetWidth) / 2,
        duration: 0.8,
        ease: 'power2.out'
      });
      
      // Actualizar dots activos
      dots.forEach(d => d.classList.remove('opacity-100'));
      dots.forEach(d => d.classList.add('opacity-50'));
      dot.classList.remove('opacity-50');
      dot.classList.add('opacity-100');
    });
  });
  
  // Efecto hover en las cards
  const serviceCards = document.querySelectorAll('.servicio-card');
  
  serviceCards.forEach(card => {
    card.addEventListener('mouseenter', () => {
      gsap.to(card, {
        y: -10,
        scale: 1.02,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
    
    card.addEventListener('mouseleave', () => {
      gsap.to(card, {
        y: 0,
        scale: 1,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
  });
</script>

<style>
  .servicios-container {
    overflow-x: hidden;
  }
  
  .servicios-wrapper {
    will-change: transform;
  }
  
  .servicio-card {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .servicio-card:hover {
    border-color: rgba(6, 43, 237, 0.3);
  }
  
  .icon-wrapper {
    transition: all 0.3s ease;
  }
  
  .servicio-card:hover .icon-wrapper {
    transform: scale(1.1) rotate(5deg);
  }
  
  @media (max-width: 768px) {
    .servicio-card {
      min-width: 300px;
    }
  }
</style>
