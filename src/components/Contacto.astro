        Enviar mensaje
      </button>
    </form>
  </div>
</div>

<script>
  // Animación del contacto
  gsap.registerPlugin(ScrollTrigger);

  // Fallback CSS para título y subtítulo
  function checkAndAnimateTitles() {
    const titulo = document.querySelector(".contacto-titulo");
    const subtitulo = document.querySelector(".contacto-subtitulo");

    if (titulo && subtitulo && !titulo.classList.contains("animate")) {
      const rect = titulo.getBoundingClientRect();
      const windowHeight =
        window.innerHeight || document.documentElement.clientHeight;

      if (rect.top < windowHeight * 0.8 && rect.bottom > 0) {
        setTimeout(() => {
          titulo.classList.add("animate");
        }, 100);

        setTimeout(() => {
          subtitulo.classList.add("animate");
        }, 300);
      }
    }
  }

  // Verificar títulos al hacer scroll
  window.addEventListener("scroll", checkAndAnimateTitles);
  checkAndAnimateTitles();

  // Animación del título
  gsap.fromTo(
    ".contacto-titulo",
    {
      opacity: 0,
      y: 50,
      scale: 0.9,
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".contacto-titulo",
        start: "top 85%",
        end: "bottom 15%",
        toggleActions: "play none none reverse",
        once: true,
      },
    }
  );

  // Animación del subtítulo
  gsap.fromTo(
    ".contacto-subtitulo",
    {
      opacity: 0,
      y: 30,
    },
    {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".contacto-subtitulo",
        start: "top 85%",
        end: "bottom 15%",
        toggleActions: "play none none reverse",
        once: true,
      },
    }
  );

  // Animación del título (mantener la existente)
  gsap.from("#contacto h2", {
    y: 50,
    opacity: 0,
    duration: 0.8,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#contacto",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    },
  });

  // Animación de los elementos de contacto
  gsap.from(".contacto-item", {
    x: -50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#contacto",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    },
  });

  // Animación de los campos del formulario
  gsap.from(".form-group", {
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.1,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#contacto",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    },
  });

  // Funcionalidad del formulario
  const form = document.querySelector(".contacto-form form");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const button = form.querySelector("button") as HTMLButtonElement;
    const originalText = button.textContent;

    // Cambiar estado del botón
    button.textContent = "Enviando...";
    button.disabled = true;

    try {
      // Simular envío
      await new Promise((resolve) => setTimeout(resolve, 2000));

      // Mostrar mensaje de éxito
      showContactMessage(
        "¡Mensaje enviado! Te responderemos pronto.",
        "success"
      );

      // Limpiar formulario
      form.reset();
    } catch (error) {
      showContactMessage(
        "Hubo un error. Por favor, intenta de nuevo.",
        "error"
      );
    } finally {
      button.textContent = originalText;
      button.disabled = false;
    }
  });

  // Función para mostrar mensajes de contacto
  function showContactMessage(message: string, type: "success" | "error") {
    const messageDiv = document.createElement("div");
    messageDiv.className = `fixed top-4 right-4 px-6 py-4 rounded-lg text-white font-medium z-50 transform translate-x-full transition-transform duration-300 ${
      type === "success" ? "bg-green-500" : "bg-red-500"
    }`;
    messageDiv.textContent = message;

    document.body.appendChild(messageDiv);

    // Animar entrada
    setTimeout(() => {
      messageDiv.classList.remove("translate-x-full");
    }, 100);

    // Animar salida y remover
    setTimeout(() => {
      messageDiv.classList.add("translate-x-full");
      setTimeout(() => {
        document.body.removeChild(messageDiv);
      }, 300);
    }, 4000);
  }

  // Efecto hover en elementos de contacto
  const contactoItems = document.querySelectorAll(".contacto-item");

  contactoItems.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      gsap.to(item, {
        x: 10,
        duration: 0.3,
        ease: "power2.out",
      });
    });

    item.addEventListener("mouseleave", () => {
      gsap.to(item, {
        x: 0,
        duration: 0.3,
        ease: "power2.out",
      });
    });
  });
</script>

<style>
  /* Estado inicial para animaciones de entrada */
  .contacto-titulo {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .contacto-subtitulo {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animaciones CSS fallback */
  .contacto-titulo.animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .contacto-subtitulo.animate {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .contacto-item {
    transition: all 0.3s ease;
  }

  .contacto-item:hover {
    transform: translateX(10px);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(6, 43, 237, 0.1);
  }

  @media (max-width: 1024px) {
    .contacto-info {
      order: 2;
    }

    .contacto-form {
      order: 1;
    }
  }
</style>
