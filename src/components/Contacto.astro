<script>



  // Animaciones GSAP mejoradas para el componente de contacto
  gsap.registerPlugin(ScrollTrigger);

  // Timeline principal para la sección de contacto
  const contactoTL = gsap.timeline({
    scrollTrigger: {
      trigger: "#contacto",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    }
  });

  // Animación del icono principal
  gsap.fromTo(".contacto-icon", 
    {
      scale: 0,
      rotation: -180,
      opacity: 0
    },
    {
      scale: 1,
      rotation: 0,
      opacity: 1,
      duration: 1.2,
      ease: "back.out(1.7)",
      scrollTrigger: {
        trigger: ".contacto-icon",
        start: "top 85%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación del título principal con efecto de escritura
  gsap.fromTo(".contacto-titulo",
    {
      opacity: 0,
      y: 80,
      scale: 0.8,
      filter: "blur(10px)"
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      filter: "blur(0px)",
      duration: 1.5,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".contacto-titulo",
        start: "top 85%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación del subtítulo
  gsap.fromTo(".contacto-subtitulo",
    {
      opacity: 0,
      y: 40,
      filter: "blur(5px)"
    },
    {
      opacity: 1,
      y: 0,
      filter: "blur(0px)",
      duration: 1,
      ease: "power2.out",
      delay: 0.3,
      scrollTrigger: {
        trigger: ".contacto-subtitulo",
        start: "top 85%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación de los elementos de información de contacto
  gsap.fromTo(".contacto-item",
    {
      x: -100,
      opacity: 0,
      scale: 0.9,
      filter: "blur(5px)"
    },
    {
      x: 0,
      opacity: 1,
      scale: 1,
      filter: "blur(0px)",
      duration: 0.8,
      stagger: 0.2,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".contacto-info",
        start: "top 80%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación del header de información
  gsap.fromTo(".contacto-info-header",
    {
      y: 50,
      opacity: 0
    },
    {
      y: 0,
      opacity: 1,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".contacto-info-header",
        start: "top 85%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación del formulario
  gsap.fromTo(".contacto-form",
    {
      x: 100,
      opacity: 0,
      scale: 0.95,
      filter: "blur(5px)"
    },
    {
      x: 0,
      opacity: 1,
      scale: 1,
      filter: "blur(0px)",
      duration: 1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".contacto-form",
        start: "top 80%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación de los campos del formulario
  gsap.fromTo(".form-group",
    {
      y: 30,
      opacity: 0,
      scale: 0.95
    },
    {
      y: 0,
      opacity: 1,
      scale: 1,
      duration: 0.6,
      stagger: 0.1,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".contacto-form",
        start: "top 80%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Animación de elementos decorativos de fondo
  gsap.fromTo("#contacto .absolute",
    {
      scale: 0,
      opacity: 0
    },
    {
      scale: 1,
      opacity: 1,
      duration: 2,
      stagger: 0.3,
      ease: "power1.out",
      scrollTrigger: {
        trigger: "#contacto",
        start: "top 90%",
        toggleActions: "play none none reverse",
      }
    }
  );

  // Efectos hover mejorados para elementos de contacto
  const contactoItems = document.querySelectorAll(".contacto-item");

  contactoItems.forEach((item) => {
    const icon = item.querySelector("div:first-child");
    
    item.addEventListener("mouseenter", () => {
      gsap.to(item, {
        y: -5,
        scale: 1.02,
        duration: 0.3,
        ease: "power2.out"
      });
      
      gsap.to(icon, {
        rotation: 360,
        scale: 1.1,
        duration: 0.5,
        ease: "back.out(1.7)"
      });
    });

    item.addEventListener("mouseleave", () => {
      gsap.to(item, {
        y: 0,
        scale: 1,
        duration: 0.3,
        ease: "power2.out"
      });
      
      gsap.to(icon, {
        rotation: 0,
        scale: 1,
        duration: 0.3,
        ease: "power2.out"
      });
    });
  });

  // Efectos hover para campos del formulario
  const formInputs = document.querySelectorAll(".form-group input, .form-group select, .form-group textarea");

  formInputs.forEach((input) => {
    input.addEventListener("focus", () => {
      gsap.to(input, {
        scale: 1.02,
        duration: 0.2,
        ease: "power2.out"
      });
    });

    input.addEventListener("blur", () => {
      gsap.to(input, {
        scale: 1,
        duration: 0.2,
        ease: "power2.out"
      });
    });
  });

  // Funcionalidad del formulario mejorada
  const form = document.querySelector(".contacto-form form");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const button = form.querySelector("button") as HTMLButtonElement;
    const buttonText = button.querySelector("span:first-child") as HTMLSpanElement;
    const buttonIcon = button.querySelector("svg") as SVGElement;
    const originalText = buttonText.textContent;

    // Animación del botón al enviar
    gsap.to(button, {
      scale: 0.95,
      duration: 0.1,
      yoyo: true,
      repeat: 1,
      ease: "power2.inOut"
    });

    // Cambiar estado del botón
    buttonText.textContent = "Enviando...";
    gsap.to(buttonIcon, {
      rotation: 360,
      duration: 1,
      repeat: -1,
      ease: "none"
    });

    button.disabled = true;

    try {
      // Simular envío
      await new Promise((resolve) => setTimeout(resolve, 2000));

      // Mostrar mensaje de éxito
      showContactMessage(
        "¡Mensaje enviado! Te responderemos pronto.",
        "success"
      );

      // Limpiar formulario
      (form as HTMLFormElement).reset();
    } catch (error) {
      showContactMessage(
        "Hubo un error. Por favor, intenta de nuevo.",
        "error"
      );
    } finally {
      buttonText.textContent = originalText;
      gsap.killTweensOf(buttonIcon);
      gsap.to(buttonIcon, {
        rotation: 0,
        duration: 0.3,
        ease: "power2.out"
      });
      button.disabled = false;
    }
  });

  // Función mejorada para mostrar mensajes de contacto
  function showContactMessage(message: string, type: "success" | "error") {
    const messageDiv = document.createElement("div");
    messageDiv.className = `fixed top-6 right-6 px-6 py-4 rounded-xl text-white font-medium z-50 transform translate-x-full transition-all duration-300 shadow-2xl ${
      type === "success" ? "bg-gradient-to-r from-[#062bed] to-[#3b4ef7]" : "bg-gradient-to-r from-[#062bed] to-[#3b4ef7]"
    }`;
    
    messageDiv.innerHTML = `
      <div class="flex items-center space-x-3">
        <div class="w-6 h-6 rounded-full bg-white/20 flex items-center justify-center">
          ${type === "success" ? 
            '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>' :
            '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>'
          }
        </div>
        <span>${message}</span>
      </div>
    `;

    document.body.appendChild(messageDiv);

    // Animar entrada
    gsap.fromTo(messageDiv, 
      { x: 400, opacity: 0, scale: 0.8 },
      { x: 0, opacity: 1, scale: 1, duration: 0.5, ease: "back.out(1.7)" }
    );

    // Animar salida y remover
    setTimeout(() => {
      gsap.to(messageDiv, {
        x: 400,
        opacity: 0,
        scale: 0.8,
        duration: 0.3,
        ease: "power2.in",
        onComplete: () => {
          if (document.body.contains(messageDiv)) {
            document.body.removeChild(messageDiv);
          }
        }
      });
    }, 4000);
  }

  // Animación de entrada suave para toda la sección
  gsap.fromTo("#contacto",
    {
      opacity: 0
    },
    {
      opacity: 1,
      duration: 0.5,
      ease: "power2.out"
    }
  );
</script>

<style>
  /* Estilos mejorados para el componente de contacto */
  
  /* Animaciones de entrada suaves */
  .contacto-titulo,
  .contacto-subtitulo,
  .contacto-icon,
  .contacto-item,
  .contacto-form,
  .form-group {
    will-change: transform, opacity, filter;
  }

  .contacto-subtitulo {
    font-size: 1.2rem;
  }

  /* Efectos de hover mejorados */
  .contacto-item {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
  }

  .contacto-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* Estilos para campos del formulario */
  .form-group input,
  .form-group select,
