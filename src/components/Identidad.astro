<script>
  // Función para animar cards con CSS puro (fallback)
  function animateIdentidadCards() {
    // Función para verificar si elemento está en viewport
    function isInViewport(element) {
      const rect = element.getBoundingClientRect();
      const windowHeight =
        window.innerHeight || document.documentElement.clientHeight;
      return rect.top < windowHeight * 0.8 && rect.bottom > 0;
    }

    // Función para activar animaciones cuando llegues a la sección
    function checkAndAnimate() {
      const titulo = document.querySelector(".identidad-titulo");
      const subtitulo = document.querySelector(".identidad-subtitulo");

      if (titulo && subtitulo && !titulo.classList.contains("animate")) {
        if (isInViewport(titulo)) {
          setTimeout(() => {
            titulo.classList.add("animate");
          }, 100);

          setTimeout(() => {
            subtitulo.classList.add("animate");
          }, 300);
        }
      }
    }

    // Verificar al hacer scroll
    window.addEventListener("scroll", checkAndAnimate);

    // Verificar al cargar la página
    checkAndAnimate();

    const cards = document.querySelectorAll(".identidad-card");

    // Configurar estados iniciales
    cards.forEach((card) => {
      card.style.transform = "translateY(50px)";
      card.style.opacity = "0";
      card.style.transition = "all 0.8s ease-out";
    });

    // Función para verificar si un elemento está en viewport
    function isInViewport(element) {
      const rect = element.getBoundingClientRect();
      return (
        rect.top >= 0 &&
        rect.left >= 0 &&
        rect.bottom <=
          (window.innerHeight || document.documentElement.clientHeight) &&
        rect.right <=
          (window.innerWidth || document.documentElement.clientWidth)
      );
    }

    // Función para animar elementos cuando entran en viewport
    function animateOnScroll() {
      cards.forEach((card, index) => {
        if (isInViewport(card) && card.style.opacity === "0") {
          setTimeout(() => {
            card.style.transform = "translateY(0)";
            card.style.opacity = "1";
          }, index * 150);
        }
      });
    }

    // Escuchar scroll
    window.addEventListener("scroll", animateOnScroll);

    // Ejecutar una vez al cargar
    setTimeout(animateOnScroll, 500);
  }

  // Función principal de inicialización con GSAP avanzado
  function initIdentidadAnimations() {
    // Intentar usar GSAP si está disponible
    if (typeof gsap !== "undefined" && window.gsapReady) {
      console.log("🎬 Usando GSAP avanzado para animaciones de Identidad");

      // Timeline principal para la sección
      const mainTimeline = gsap.timeline({
        scrollTrigger: {
          trigger: "#identidad",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
          once: true, // Solo se ejecuta una vez
        },
      });

      // ScrollTrigger específico para título y subtítulo
      gsap.registerPlugin(ScrollTrigger);

      // Animación del título
      gsap.fromTo(
        ".identidad-titulo",
        {
          opacity: 0,
          y: 50,
          scale: 0.9,
        },
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: ".identidad-titulo",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );

      // Animación del subtítulo
      gsap.fromTo(
        ".identidad-subtitulo",
        {
          opacity: 0,
          y: 30,
        },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".identidad-subtitulo",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );

      // 2. Animación de las cards con efectos 3D
      mainTimeline.from(
        ".identidad-card",
        {
          y: 100,
          opacity: 0,
          rotationX: 45,
          transformOrigin: "center bottom",
          duration: 0.8,
          stagger: {
            amount: 0.3,
            from: "start",
            ease: "power2.out",
          },
          ease: "power3.out",
        },
        "-=0.2"
      );

      // 3. Animación de las imágenes con parallax
      mainTimeline.from(
        ".card-image",
        {
          scale: 1.3,
          y: 50,
          duration: 1.0,
          stagger: 0.05,
          ease: "power2.out",
        },
        "-=0.5"
      );

      // 4. Animación de los badges con efecto de entrada dinámico
      mainTimeline.from(
        ".identidad-card .absolute",
        {
          scale: 0,
          rotation: 180,
          duration: 0.4,
          stagger: 0.05,
          ease: "back.out(1.7)",
        },
        "-=0.3"
      );

      // 5. Animación de revelado de texto
      mainTimeline.from(
        ".identidad-card h3",
        {
          y: 30,
          opacity: 0,
          duration: 0.5,
          stagger: 0.05,
          ease: "power2.out",
        },
        "-=0.2"
      );

      mainTimeline.from(
        ".identidad-card p",
        {
          y: 20,
          opacity: 0,
          duration: 0.4,
          stagger: 0.05,
          ease: "power2.out",
        },
        "-=0.1"
      );

      // 6. Animación de los íconos de valores
      mainTimeline.from(
        ".identidad-card .w-6",
        {
          scale: 0,
          rotation: 360,
          duration: 0.5,
          stagger: 0.03,
          ease: "back.out(1.7)",
        },
        "-=0.1"
      );

      // 7. Animación de los badges de certificaciones
      mainTimeline.from(
        ".identidad-card .bg-secondary\\/10",
        {
          scale: 0,
          y: 20,
          duration: 0.4,
          stagger: 0.03,
          ease: "power2.out",
        },
        "-=0.05"
      );

      // Efectos hover magnéticos avanzados
      const cards = document.querySelectorAll(".identidad-card");

      cards.forEach((card, index) => {
        // Efecto magnético en hover
        card.addEventListener("mouseenter", () => {
          // Animación principal de la card
          gsap.to(card, {
            y: -30,
            scale: 1.03,
            rotationY: 5,
            rotationX: 5,
            duration: 0.6,
            ease: "power2.out",
          });

          // Animación de la imagen con parallax
          gsap.to(card.querySelector(".card-image"), {
            scale: 1.1,
            y: -10,
            duration: 0.6,
            ease: "power2.out",
          });

          // Animación del badge
          gsap.to(card.querySelector(".absolute"), {
            scale: 1.2,
            rotation: 5,
            duration: 0.4,
            ease: "back.out(1.7)",
          });

          // Animación de los íconos (solo en la card de valores)
          if (index === 2) {
            gsap.to(card.querySelectorAll(".w-6"), {
              scale: 1.2,
              rotation: 10,
              duration: 0.3,
              stagger: 0.05,
              ease: "power2.out",
            });
          }

          // Animación de los badges de certificaciones
          if (index === 3) {
            gsap.to(card.querySelectorAll(".bg-secondary\\/10"), {
              scale: 1.1,
              y: -5,
              duration: 0.3,
              stagger: 0.05,
              ease: "power2.out",
            });
          }
        });

        card.addEventListener("mouseleave", () => {
          // Reset de todas las animaciones
          gsap.to(card, {
            y: 0,
            scale: 1,
            rotationY: 0,
            rotationX: 0,
            duration: 0.6,
            ease: "power2.out",
          });

          gsap.to(card.querySelector(".card-image"), {
            scale: 1,
            y: 0,
            duration: 0.6,
            ease: "power2.out",
          });

          gsap.to(card.querySelector(".absolute"), {
            scale: 1,
            rotation: 0,
            duration: 0.4,
            ease: "power2.out",
          });

          if (index === 2) {
            gsap.to(card.querySelectorAll(".w-6"), {
              scale: 1,
              rotation: 0,
              duration: 0.3,
              stagger: 0.05,
              ease: "power2.out",
            });
          }

          if (index === 3) {
            gsap.to(card.querySelectorAll(".bg-secondary\\/10"), {
              scale: 1,
              y: 0,
              duration: 0.3,
              stagger: 0.05,
              ease: "power2.out",
            });
          }
        });

        // Efecto de seguimiento del mouse (magnetic effect)
        card.addEventListener("mousemove", (e) => {
          const rect = card.getBoundingClientRect();
          const x = e.clientX - rect.left - rect.width / 2;
          const y = e.clientY - rect.top - rect.height / 2;

          gsap.to(card, {
            rotationY: x * 0.1,
            rotationX: -y * 0.1,
            duration: 0.3,
            ease: "power2.out",
          });
        });
      });

      // Efecto parallax en scroll para las imágenes
      gsap.utils.toArray(".card-image").forEach((image, index) => {
        gsap.to(image, {
          yPercent: -50,
          ease: "none",
          scrollTrigger: {
            trigger: image,
            start: "top bottom",
            end: "bottom top",
            scrub: true,
          },
        });
      });

      // Animación de pulso en los badges
      gsap.to(".identidad-card .absolute", {
        scale: 1.05,
        duration: 2,
        repeat: -1,
        yoyo: true,
        ease: "power2.inOut",
        stagger: 0.5,
      });
    } else {
      console.log("🎨 Usando CSS puro para animaciones de Identidad");
      animateIdentidadCards();
    }
  }

  // Iniciar animaciones cuando GSAP esté listo o después de un timeout
  if (window.gsapReady) {
    initIdentidadAnimations();
  } else {
    window.addEventListener("gsapReady", initIdentidadAnimations);

    // Fallback: si después de 2 segundos GSAP no está disponible
    setTimeout(() => {
      if (!window.gsapReady) {
        initIdentidadAnimations();
      }
    }, 2000);
  }
</script>

<style>
  /* Estado inicial para animaciones de entrada */
  .identidad-titulo {
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }

  .identidad-subtitulo {
    opacity: 0;
    transform: translateY(30px);
  }

  /* Animaciones CSS fallback */
  .identidad-titulo.animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .identidad-subtitulo.animate {
