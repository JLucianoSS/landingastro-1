<script>
  // Animación de las alianzas
  gsap.registerPlugin(ScrollTrigger);
  
  // Animación de entrada de los logos con stagger
  gsap.from('.logo-container', {
    scale: 0,
    opacity: 0,
    duration: 0.6,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#alianzas',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación del texto descriptivo
  gsap.from('#alianzas p', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    delay: 0.5,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#alianzas',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Efecto hover con GSAP
  const logos = document.querySelectorAll('.logo-container');
  
  logos.forEach(logo => {
    logo.addEventListener('mouseenter', () => {
      gsap.to(logo, {
        scale: 1.1,
        y: -10,
        duration: 0.3,
        ease: 'power2.out'
      });
      
      // Efecto de flotación
      gsap.to(logo, {
        y: -5,
        duration: 1,
        repeat: -1,
        yoyo: true,
        ease: 'power2.inOut'
      });
    });
    
    logo.addEventListener('mouseleave', () => {
      gsap.to(logo, {
        scale: 1,
        y: 0,
        duration: 0.3,
        ease: 'power2.out'
      });
      
      // Detener la flotación
      gsap.killTweensOf(logo);
    });
  });
  
  // Animación de rotación sutil en hover
  logos.forEach(logo => {
    logo.addEventListener('mouseenter', () => {
      gsap.to(logo, {
        rotation: 5,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
    
    logo.addEventListener('mouseleave', () => {
      gsap.to(logo, {
        rotation: 0,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
  });
</script>

<style>
  .logo-container {
    border: 1px solid rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }
  
  .logo-container:hover {
    border-color: rgba(6, 43, 237, 0.3);
    box-shadow: 0 10px 25px rgba(6, 43, 237, 0.15);
  }
  
  .logo-container:hover > div {
    transform: scale(1.05);
  }
  
  .logo-container > div {
    transition: transform 0.3s ease;
  }
  
  @media (max-width: 768px) {
    .logo-container {
      padding: 1rem;
    }
    
    .logo-container > div {
      height: 3rem;
    }
  }
</style>
