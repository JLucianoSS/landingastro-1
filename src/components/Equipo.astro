---
// Equipo component
---

<section id="equipo" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Contenido de texto -->
      <div class="texto-equipo">
        <h2 class="text-4xl md:text-5xl font-bold text-dark mb-8">Únete a nuestro equipo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="columna-texto">
            <p class="text-lg text-dark/80 leading-relaxed mb-6">
              Somos un equipo apasionado por la innovación tecnológica y comprometido con la excelencia. 
              Buscamos profesionales que compartan nuestra visión de transformar el futuro digital.
            </p>
            <p class="text-lg text-dark/80 leading-relaxed">
              Ofrecemos un entorno de trabajo dinámico, oportunidades de crecimiento profesional y 
              proyectos desafiantes que marcan la diferencia en la industria.
            </p>
          </div>
          <div class="columna-texto">
            <h3 class="text-2xl font-bold text-dark mb-4">¿Por qué unirte?</h3>
            <ul class="space-y-3 text-dark/80">
              <li class="flex items-center">
                <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
                Proyectos innovadores
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
                Crecimiento profesional
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
                Ambiente colaborativo
              </li>
              <li class="flex items-center">
                <span class="w-2 h-2 bg-secondary rounded-full mr-3"></span>
                Tecnología de vanguardia
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Botón ÚNETE -->
        <div class="mt-12">
          <a href="#formulario-equipo" class="btn-unete inline-block px-8 py-4 bg-secondary text-white rounded-full font-semibold text-lg hover:bg-dark transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
            ÚNETE
          </a>
        </div>
      </div>
      
      <!-- Fotos del equipo -->
      <div class="fotos-equipo">
        <div class="grid grid-cols-3 gap-4">
          
          <!-- Foto 1 -->
          <div class="foto-container foto-1">
            <div class="foto-placeholder bg-gradient-to-br from-secondary to-dark rounded-2xl h-48 flex items-center justify-center text-white font-bold text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-rotate-2">
              <div class="text-center">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mb-2 mx-auto">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <p>CEO</p>
              </div>
            </div>
          </div>
          
          <!-- Foto 2 -->
          <div class="foto-container foto-2">
            <div class="foto-placeholder bg-gradient-to-br from-dark to-secondary rounded-2xl h-48 flex items-center justify-center text-white font-bold text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:rotate-2">
              <div class="text-center">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mb-2 mx-auto">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <p>CTO</p>
              </div>
            </div>
          </div>
          
          <!-- Foto 3 -->
          <div class="foto-container foto-3">
            <div class="foto-placeholder bg-gradient-to-br from-secondary to-dark rounded-2xl h-48 flex items-center justify-center text-white font-bold text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 hover:-rotate-2">
              <div class="text-center">
                <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mb-2 mx-auto">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <p>Lead Dev</p>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      
    </div>
  </div>
</section>

<!-- Formulario de equipo (placeholder) -->
<div id="formulario-equipo" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 opacity-0 pointer-events-none transition-opacity duration-300">
  <div class="bg-white rounded-2xl p-8 max-w-md w-full mx-4 transform scale-95 transition-transform duration-300">
    <h3 class="text-2xl font-bold text-dark mb-6">Únete a nuestro equipo</h3>
    <form class="space-y-4">
      <div>
        <label class="block text-dark font-medium mb-2">Nombre completo</label>
        <input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-secondary" required>
      </div>
      <div>
        <label class="block text-dark font-medium mb-2">Email</label>
        <input type="email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-secondary" required>
      </div>
      <div>
        <label class="block text-dark font-medium mb-2">Posición de interés</label>
        <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-secondary">
          <option>Desarrollador Full Stack</option>
          <option>DevOps Engineer</option>
          <option>Data Scientist</option>
          <option>UX/UI Designer</option>
          <option>Project Manager</option>
        </select>
      </div>
      <div>
        <label class="block text-dark font-medium mb-2">Mensaje</label>
        <textarea rows="4" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-secondary"></textarea>
      </div>
      <div class="flex gap-4">
        <button type="submit" class="flex-1 px-6 py-3 bg-secondary text-white rounded-lg font-semibold hover:bg-dark transition-colors">
          Enviar
        </button>
        <button type="button" class="px-6 py-3 border border-gray-300 text-dark rounded-lg font-semibold hover:bg-gray-50 transition-colors" onclick="cerrarFormulario()">
          Cancelar
        </button>
      </div>
    </form>
  </div>
</div>

<script>
  // Animación del equipo
  gsap.registerPlugin(ScrollTrigger);
  
  // Animación del texto
  gsap.from('.texto-equipo h2', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#equipo',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  gsap.from('.columna-texto', {
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#equipo',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación de las fotos con stagger
  gsap.from('.foto-container', {
    y: 100,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#equipo',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación del botón
  gsap.from('.btn-unete', {
    scale: 0,
    opacity: 0,
    duration: 0.6,
    delay: 0.5,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#equipo',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Efecto hover en las fotos
  const fotos = document.querySelectorAll('.foto-placeholder');
  
  fotos.forEach(foto => {
    foto.addEventListener('mouseenter', () => {
      gsap.to(foto, {
        scale: 1.05,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
    
    foto.addEventListener('mouseleave', () => {
      gsap.to(foto, {
        scale: 1,
        duration: 0.3,
        ease: 'power2.out'
      });
    });
  });
  
  // Funcionalidad del formulario
  const btnUnete = document.querySelector('.btn-unete');
  const formulario = document.getElementById('formulario-equipo');
  const formularioContent = formulario?.querySelector('div');
  
  btnUnete?.addEventListener('click', (e) => {
    e.preventDefault();
    if (formulario && formularioContent) {
      formulario.classList.remove('opacity-0', 'pointer-events-none');
      formularioContent.classList.remove('scale-95');
      formularioContent.classList.add('scale-100');
    }
  });
  
  // Función para cerrar formulario
  window.cerrarFormulario = function() {
    if (formulario && formularioContent) {
      formulario.classList.add('opacity-0', 'pointer-events-none');
      formularioContent.classList.remove('scale-100');
      formularioContent.classList.add('scale-95');
    }
  };
  
  // Cerrar formulario al hacer clic fuera
  formulario?.addEventListener('click', (e) => {
    if (e.target === formulario) {
      cerrarFormulario();
    }
  });
</script>

<style>
  .foto-placeholder {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .foto-placeholder:hover {
    border-color: rgba(6, 43, 237, 0.3);
  }
  
  .btn-unete {
    box-shadow: 0 10px 25px rgba(6, 43, 237, 0.3);
  }
  
  .btn-unete:hover {
    box-shadow: 0 15px 35px rgba(6, 43, 237, 0.4);
  }
  
  @media (max-width: 768px) {
    .fotos-equipo {
      order: -1;
    }
    
    .foto-placeholder {
      height: 120px;
    }
  }
</style>
