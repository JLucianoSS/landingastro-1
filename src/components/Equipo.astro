<script>
  // Verificar GSAP y inicializar animaciones - IGUAL QUE IDENTIDAD
  function initEquipoAnimations() {
    if (typeof gsap !== "undefined" && gsap.registerPlugin) {
      console.log("🎬 Inicializando animaciones GSAP para Equipo");

      // Registrar ScrollTrigger
      gsap.registerPlugin(ScrollTrigger);

      // Animación del título
      gsap.fromTo(
        ".equipo-titulo",
        {
          opacity: 0,
          y: 50,
          scale: 0.9,
        },
        {
          opacity: 1,
          y: 0,
          scale: 1,
          duration: 1,
          ease: "power3.out",
          scrollTrigger: {
            trigger: ".equipo-titulo",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );

      // Animación del subtítulo
      gsap.fromTo(
        ".equipo-subtitulo",
        {
          opacity: 0,
          y: 30,
        },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".equipo-subtitulo",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );

      // Animación del contenido izquierdo
      gsap.fromTo(
        ".equipo-left-content",
        {
          opacity: 0,
          x: -50,
        },
        {
          opacity: 1,
          x: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".equipo-left-content",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );

      // Animación del carousel
      gsap.fromTo(
        ".equipo-carousel",
        {
          opacity: 0,
          x: 50,
        },
        {
          opacity: 1,
          x: 0,
          duration: 0.8,
          ease: "power2.out",
          scrollTrigger: {
            trigger: ".equipo-carousel",
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
            once: true,
          },
        }
      );
    } else {
      // Fallback CSS como Identidad
      function animateEquipoElements() {
        function isInViewport(element) {
          const rect = element.getBoundingClientRect();
          const windowHeight =
            window.innerHeight || document.documentElement.clientHeight;
          return rect.top < windowHeight * 0.8 && rect.bottom > 0;
        }

        function checkAndAnimate() {
          const titulo = document.querySelector(".equipo-titulo");
          const subtitulo = document.querySelector(".equipo-subtitulo");
          const leftContent = document.querySelector(".equipo-left-content");
          const carousel = document.querySelector(".equipo-carousel");

          if (titulo && !titulo.classList.contains("animate")) {
            if (isInViewport(titulo)) {
              setTimeout(() => {
                titulo.classList.add("animate");
              }, 100);

              setTimeout(() => {
                if (subtitulo) subtitulo.classList.add("animate");
              }, 200);

              setTimeout(() => {
                if (leftContent) leftContent.classList.add("animate");
              }, 300);

              setTimeout(() => {
                if (carousel) carousel.classList.add("animate");
              }, 400);
            }
          }
        }

        window.addEventListener("scroll", checkAndAnimate);
        checkAndAnimate();
      }

      animateEquipoElements();
    }
  }

  // Ejecutar cuando GSAP esté listo
  window.addEventListener("gsapReady", initEquipoAnimations);

  // También intentar al cargar la página
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(initEquipoAnimations, 500);
  });

  // Variables del carousel
  let currentMember = 0;
  const totalMembers = 4;
  let carouselInterval;

  // Función para cambiar miembro
  function changeMember(index) {
    const cards = document.querySelectorAll(".team-card");

    // Remover clase active de todas las cards
    cards.forEach((card) => {
      card.classList.remove("active");
    });

    // Agregar clase active a la card actual
    if (cards[index]) {
      cards[index].classList.add("active");
    }

    currentMember = index;
  }

  // Función para siguiente miembro
  function nextMember() {
    const next = (currentMember + 1) % totalMembers;
    changeMember(next);
  }

  // Función para miembro anterior
  function prevMember() {
    const prev = (currentMember - 1 + totalMembers) % totalMembers;
    changeMember(prev);
  }

  // Inicializar carousel
  function initCarousel() {
    // Configurar estado inicial
    const cards = document.querySelectorAll(".team-card");

    cards.forEach((card, index) => {
      if (index === 0) {
        card.classList.add("active");
      } else {
        card.classList.remove("active");
      }
    });

    // Iniciar carousel automático
    carouselInterval = setInterval(nextMember, 4000);
  }

  // Inicializar cuando la página esté lista
  document.addEventListener("DOMContentLoaded", () => {
    // Inicializar carousel inmediatamente
    initCarousel();

    // Event listeners para controles
    const nextBtn = document.querySelector(".next-btn");
    const prevBtn = document.querySelector(".prev-btn");
    const carouselContainer = document.querySelector(".carousel-container");

    if (nextBtn) {
      nextBtn.addEventListener("click", () => {
        clearInterval(carouselInterval);
        nextMember();
        carouselInterval = setInterval(nextMember, 4000);
      });
    }

    if (prevBtn) {
      prevBtn.addEventListener("click", () => {
        clearInterval(carouselInterval);
        prevMember();
        carouselInterval = setInterval(nextMember, 4000);
      });
    }

    // Pausar carousel al hacer hover
    if (carouselContainer) {
      carouselContainer.addEventListener("mouseenter", () => {
        clearInterval(carouselInterval);
      });

      carouselContainer.addEventListener("mouseleave", () => {
        carouselInterval = setInterval(nextMember, 4000);
      });
    }
  });

  // También inicializar con un timeout por si acaso
  setTimeout(() => {
    if (!carouselInterval) {
      initCarousel();
    }
  }, 2000);
</script>

