<style>
  .social-link {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .social-link:hover {
    border-color: rgba(6, 43, 237, 0.5);
    transform: translateY(-2px);
  }
  
  footer a {
    transition: all 0.3s ease;
  }
  
  footer a:hover {
    transform: translateX(5px);
  }
  
  @media (max-width: 768px) {
    footer {
      text-align: center;
    }
    
    .social-link {
      margin: 0 auto;
    }
  }
</style>
