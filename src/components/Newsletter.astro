          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Animación del newsletter
  gsap.registerPlugin(ScrollTrigger);

  // Fallback CSS para título y subtítulo
  function checkAndAnimateTitles() {
    const titulo = document.querySelector(".newsletter-titulo");
    const subtitulo = document.querySelector(".newsletter-subtitulo");

    if (titulo && subtitulo && !titulo.classList.contains("animate")) {
      const rect = titulo.getBoundingClientRect();
      const windowHeight =
        window.innerHeight || document.documentElement.clientHeight;

      if (rect.top < windowHeight * 0.8 && rect.bottom > 0) {
        setTimeout(() => {
          titulo.classList.add("animate");
        }, 100);

        setTimeout(() => {
          subtitulo.classList.add("animate");
        }, 300);
      }
    }
  }

  // Verificar títulos al hacer scroll
  window.addEventListener("scroll", checkAndAnimateTitles);
  checkAndAnimateTitles();

  // Animación del título
  gsap.fromTo(
    ".newsletter-titulo",
    {
      opacity: 0,
      y: 50,
      scale: 0.9,
    },
    {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: ".newsletter-titulo",
        start: "top 85%",
        end: "bottom 15%",
        toggleActions: "play none none reverse",
        once: true,
      },
    }
  );

  // Animación del subtítulo
  gsap.fromTo(
    ".newsletter-subtitulo",
    {
      opacity: 0,
      y: 30,
    },
    {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: "power2.out",
      scrollTrigger: {
        trigger: ".newsletter-subtitulo",
        start: "top 85%",
        end: "bottom 15%",
        toggleActions: "play none none reverse",
        once: true,
      },
    }
  );

  // Animación del formulario (mantener la existente)
  gsap.from(".newsletter-form", {
    y: 50,
    opacity: 0,
    duration: 0.8,
    ease: "power2.out",
    scrollTrigger: {
      trigger: ".newsletter-form",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    },
  });

  // Animación de los iconos sociales
  gsap.from(".social-icon", {
    y: 30,
    opacity: 0,
    duration: 0.6,
    stagger: 0.1,
    ease: "back.out(1.7)",
    scrollTrigger: {
      trigger: ".social-icon",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse",
    },
  });

  // Funcionalidad del formulario
  const form = document.querySelector(".newsletter-form");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    const email = form.querySelector('input[type="email"]') as HTMLInputElement;
    const button = form.querySelector("button") as HTMLButtonElement;

    if (!email.value) return;

    // Cambiar estado del botón
    const originalText = button.textContent;
    button.textContent = "Enviando...";
    button.disabled = true;

    try {
      // Aquí iría la integración con Klaviyo
      // Por ahora simulamos el envío
      await new Promise((resolve) => setTimeout(resolve, 2000));

      // Mostrar mensaje de éxito
      showMessage(
        "¡Gracias por suscribirte! Te mantendremos informado.",
        "success"
      );
      email.value = "";
    } catch (error) {
      showMessage("Hubo un error. Por favor, intenta de nuevo.", "error");
    } finally {
      button.textContent = originalText;
      button.disabled = false;
    }
  });

  // Función para mostrar mensajes
  function showMessage(message: string, type: "success" | "error") {
    const messageDiv = document.createElement("div");
    messageDiv.className = `fixed top-4 right-4 px-6 py-4 rounded-lg text-white font-medium z-50 transform translate-x-full transition-transform duration-300 ${
      type === "success" ? "bg-green-500" : "bg-red-500"
    }`;
    messageDiv.textContent = message;

    document.body.appendChild(messageDiv);

    // Animar entrada
    setTimeout(() => {
      messageDiv.classList.remove("translate-x-full");
    }, 100);

    // Animar salida y remover
    setTimeout(() => {
      messageDiv.classList.add("translate-x-full");
      setTimeout(() => {
        document.body.removeChild(messageDiv);
      }, 300);
    }, 3000);
  }

  // Efecto hover en iconos sociales
  const socialIcons = document.querySelectorAll(".social-icon");

  socialIcons.forEach((icon) => {
    icon.addEventListener("mouseenter", () => {
      gsap.to(icon, {
        scale: 1.1,
        duration: 0.3,
        ease: "power2.out",
      });
    });

    icon.addEventListener("mouseleave", () => {
      gsap.to(icon, {
        scale: 1,
        duration: 0.3,
        ease: "power2.out",
      });
    });
  });
</script>

<style>
  /* Estado inicial para animaciones de entrada */
  .newsletter-titulo {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  .newsletter-subtitulo {
    opacity: 1;
    transform: translateY(0);
  }

  /* Animaciones CSS fallback */
  .newsletter-titulo.animate {
    opacity: 1;
    transform: translateY(0) scale(1);
    transition: all 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .newsletter-subtitulo.animate {
    opacity: 1;
    transform: translateY(0);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .newsletter-form input {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .newsletter-form input:focus {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .social-icon {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .social-icon:hover {
    border-color: rgba(255, 255, 255, 0.4);
  }

  @media (max-width: 640px) {
    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-form button {
      width: 100%;
    }
  }
</style>
