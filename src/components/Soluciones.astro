---
// Soluciones component
---

<section id="soluciones" class="py-20 bg-white relative overflow-hidden">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl md:text-5xl font-bold text-dark text-center mb-16">Ecosistema de Soluciones</h2>
    
    <!-- Contenedor del ecosistema -->
    <div class="ecosistema-container relative w-full max-w-4xl mx-auto">
      
      <!-- Círculo central -->
      <div class="centro-ecosistema absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-gradient-to-br from-secondary to-dark rounded-full flex items-center justify-center z-10">
        <div class="text-center text-white">
          <h3 class="text-xl font-bold mb-2">Ecosistema</h3>
          <p class="text-sm opacity-90">de Soluciones</p>
        </div>
      </div>
      
      <!-- Elementos del ecosistema -->
      <div class="elementos-ecosistema">
        
        <!-- Elemento 1: Seguridad -->
        <div class="elemento elemento-1 absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-secondary rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">Seguridad</h4>
            <p class="text-sm text-dark/70">Protección integral</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 2: Cloud -->
        <div class="elemento elemento-2 absolute top-1/4 right-0 transform translate-x-1/2 -translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-dark rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">Cloud</h4>
            <p class="text-sm text-dark/70">Infraestructura escalable</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 3: IA/ML -->
        <div class="elemento elemento-3 absolute bottom-1/4 right-0 transform translate-x-1/2 translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-secondary rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">IA/ML</h4>
            <p class="text-sm text-dark/70">Inteligencia artificial</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 4: DevOps -->
        <div class="elemento elemento-4 absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-dark rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">DevOps</h4>
            <p class="text-sm text-dark/70">Automatización</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 5: Data -->
        <div class="elemento elemento-5 absolute bottom-1/4 left-0 transform -translate-x-1/2 translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-secondary rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">Data</h4>
            <p class="text-sm text-dark/70">Analytics avanzado</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 6: IoT -->
        <div class="elemento elemento-6 absolute top-1/4 left-0 transform -translate-x-1/2 -translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-dark rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">IoT</h4>
            <p class="text-sm text-dark/70">Conectividad total</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 7: Blockchain -->
        <div class="elemento elemento-7 absolute top-1/3 left-1/3 transform -translate-x-1/2 -translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-secondary rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">Blockchain</h4>
            <p class="text-sm text-dark/70">Tecnología descentralizada</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
        <!-- Elemento 8: API -->
        <div class="elemento elemento-8 absolute top-1/3 right-1/3 transform translate-x-1/2 -translate-y-1/2">
          <div class="elemento-card bg-white p-6 rounded-2xl shadow-lg border-2 border-transparent hover:border-secondary transition-all duration-300">
            <div class="w-12 h-12 bg-dark rounded-xl flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h4 class="font-bold text-dark mb-2">API</h4>
            <p class="text-sm text-dark/70">Integración flexible</p>
          </div>
          <div class="linea-conexion"></div>
        </div>
        
      </div>
      
    </div>
  </div>
</section>

<script>
  // Animación del ecosistema de soluciones
  gsap.registerPlugin(ScrollTrigger);
  
  // Animación del centro
  gsap.from('.centro-ecosistema', {
    scale: 0,
    rotation: 360,
    duration: 1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#soluciones',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación de los elementos con stagger
  gsap.from('.elemento', {
    scale: 0,
    opacity: 0,
    duration: 0.8,
    stagger: 0.1,
    ease: 'back.out(1.7)',
    scrollTrigger: {
      trigger: '#soluciones',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Animación de las líneas de conexión
  gsap.from('.linea-conexion', {
    scaleX: 0,
    duration: 1,
    delay: 0.5,
    stagger: 0.1,
    ease: 'power2.out',
    scrollTrigger: {
      trigger: '#soluciones',
      start: 'top 80%',
      end: 'bottom 20%',
      toggleActions: 'play none none reverse'
    }
  });
  
  // Efecto hover en los elementos
  const elementos = document.querySelectorAll('.elemento');
  
  elementos.forEach(elemento => {
    elemento.addEventListener('mouseenter', () => {
      gsap.to(elemento, {
        scale: 1.1,
        duration: 0.3,
        ease: 'power2.out'
      });
      
      // Resaltar la línea de conexión
      const linea = elemento.querySelector('.linea-conexion');
      gsap.to(linea, {
        backgroundColor: '#062BED',
        duration: 0.3,
        ease: 'power2.out'
      });
    });
    
    elemento.addEventListener('mouseleave', () => {
      gsap.to(elemento, {
        scale: 1,
        duration: 0.3,
        ease: 'power2.out'
      });
      
      // Restaurar la línea de conexión
      const linea = elemento.querySelector('.linea-conexion');
      gsap.to(linea, {
        backgroundColor: '#EAEAEA',
        duration: 0.3,
        ease: 'power2.out'
      });
    });
  });
  
  // Animación continua del centro
  gsap.to('.centro-ecosistema', {
    rotation: 360,
    duration: 20,
    repeat: -1,
    ease: 'none'
  });
</script>

<style>
  .ecosistema-container {
    height: 600px;
    position: relative;
  }
  
  .centro-ecosistema {
    box-shadow: 0 20px 40px rgba(6, 43, 237, 0.2);
  }
  
  .elemento {
    transition: all 0.3s ease;
  }
  
  .elemento-card {
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .elemento-card:hover {
    border-color: rgba(6, 43, 237, 0.3);
    box-shadow: 0 10px 25px rgba(6, 43, 237, 0.2);
  }
  
  .linea-conexion {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 2px;
    height: 100px;
    background: #EAEAEA;
    transform-origin: top center;
    z-index: 1;
  }
  
  .elemento-1 .linea-conexion { transform: translate(-50%, -50%) rotate(0deg); }
  .elemento-2 .linea-conexion { transform: translate(-50%, -50%) rotate(45deg); }
  .elemento-3 .linea-conexion { transform: translate(-50%, -50%) rotate(90deg); }
  .elemento-4 .linea-conexion { transform: translate(-50%, -50%) rotate(135deg); }
  .elemento-5 .linea-conexion { transform: translate(-50%, -50%) rotate(180deg); }
  .elemento-6 .linea-conexion { transform: translate(-50%, -50%) rotate(225deg); }
  .elemento-7 .linea-conexion { transform: translate(-50%, -50%) rotate(270deg); }
  .elemento-8 .linea-conexion { transform: translate(-50%, -50%) rotate(315deg); }
  
  @media (max-width: 768px) {
    .ecosistema-container {
      height: 400px;
    }
    
    .elemento-card {
      padding: 1rem;
    }
    
    .elemento-card h4 {
      font-size: 0.875rem;
    }
    
    .elemento-card p {
      font-size: 0.75rem;
    }
  }
</style>
